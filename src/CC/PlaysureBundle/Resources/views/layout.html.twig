<!DOCTYPE html>
<html>
    <head>
    {% block head %}
        <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/ccplaysure/css/style.css') }}" />
        <link href='http://fonts.googleapis.com/css?family=Roboto:400,900' rel='stylesheet' type='text/css'>
        <meta charset="UTF-8" />
        <title>SSN</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% endblock %}
    </head>
    <body>
        <div id="content">
            <div id="header">
                {% block header %}
                    <h1><a href="{{ url('home') }}"><img src="{{ asset('bundles/ccplaysure/images/logo.png', absolute=true) }}" alt="logo playsure"></a></h1>
                    <nav>
                        <ul id="userNav">
                                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                    <li class="user">
                                        <a  href="{{ path('fos_user_profile_edit') }}">
                                            {{ 'Profil'|trans({}, 'FOSUserBundle') }}
                                        </a>                                                               
                                    <li class="logout" >
                                        <a  href="{{ path('fos_user_security_logout') }}">
                                            {{ 'DÃ©connexion'|trans({}, 'FOSUserBundle') }}
                                        </a>
                                    </li>
                                    </li>
                                {% else %}
                                    <li class="user" ><a  href="{{ url('fos_user_security_login') }}">Connexion</a></li>
                                   <li class="register" ><a  href="{{ url('fos_user_registration_register') }}">S'inscrire</a></li>
                                {% endif %}
                        </ul>
                    </nav>
                
                {% endblock %}
            </div>
            
            <div id="container">
                {% block body %}
                    


                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="flash-message">
                            <em>Notice</em>: {{ flashMessage }}
                        </div>
                    {% endfor %}
                


                    <div class="content">
                        {% block content %}
                            <div>
                                {% block fos_user_content %}
                                {% endblock fos_user_content %}
                            </div>
                        {% endblock %}
                        <div class="clear"></div>
                    </div>


                
                    {% if code is defined %}
                        <h2>Code behind this page</h2>
                        <div class="block">
                            <div class="symfony-content">{{ code|raw }}</div>
                        </div>
                    {% endif %}
                {% endblock %}
            </div>
            <div id="footer">
                {% block footer %}
                    
                {% endblock %}
            </div>
        </div>
        {% block javascripts %}
        
        {% endblock %}
    </body>
</html>