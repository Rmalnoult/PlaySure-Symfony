{% extends "CCPlaysureBundle::layout.html.twig" %}

{% block slider %}
    <div class="slider">
    	<img src="{{ asset('bundles/ccplaysure/images/leboeuf.jpg', absolute=true) }}" alt="les pronostics de frank leboeuf">
		<div class="sliderText">
			<h2>L'expert du mois</br><strong>Franck Leboeuf</strong></h2>
			<p>Pariez comme les champions !</p>
			<a href="{{path('expertProfile', {'expertId': 3})}}" class="sliderCTA">Voir Ses Paris</a>
		</div>
    </div>
{% endblock %}


{% block content %}

	<div class="fleche">
		<img class="pointe" src="{{ asset('bundles/ccplaysure/images/pointe.png', absolute=true) }}" alt="">
		<img class="trait" src="{{ asset('bundles/ccplaysure/images/trait.png', absolute=true) }}" alt="">
	</div>
	<!-- Si la variable games existe, elle est s'affiche ici -->
	{% if games is defined %}
	<!-- Boucle qui affiche chaque game -->
		{% set i = 0 %}
		{% for game in games %}
				{% set i = i + 1 %}

				{% if i % 2 %}
				    <div class="card left">
				{% else %}
				    <div class="card right">
				{% endif %}
		    	
		    		<h2 class="">{{ game.teamA }} VS {{ game.teamB }}</h2>
		    		<!-- <h3>Cotes</3> -->
						<div class="cote">
							<ul>
								<li>
									<p>{{ game.teamA }} : {{ game.coteA }}</p>
								</li>
								<li>
									<p>Nul : {{ game.coteNul }}</p>
								</li>
								<li>
									<p>{{ game.teamB }} : {{ game.coteB }}</p>
								</li>
								<div class="clear"></div>
							</ul>

						</div>
		    		<p class="time" >{{ game.startTime }}</p>
		    		<a href="{{path('gameView', {'gameId': game.id})}}  " class="bet">Parier sur ce match</a>
		    	</div>
		    	{% if i % 2 %}
		    	    <div class="whiteCircle left">
		    	{% else %}
		    	    <div class="whiteCircle right">
		    	{% endif %}
		    		<img src="{{ asset('bundles/ccplaysure/images/circle.png', absolute=true) }}" alt="cercle">
		    	</div>
		{% endfor %}
	{% endif %}

{% endblock %}