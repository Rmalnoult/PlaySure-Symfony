{% extends "CCPlaysureBundle::layout.html.twig" %}

{% block slider %}
<h1>Mes Paris</h1>
{% endblock %}


{% block content %}
<div id="container" class="game">
	<div class="fleche">
		<img class="pointe" src="{{ asset('bundles/ccplaysure/images/pointe.png', absolute=true) }}" alt="">
	</div>
	<!-- Si la variable games existe, elle est s'affiche ici -->
	{% if bets is defined %}
	<!-- Boucle qui affiche chaque game -->
		{% set i = 0 %}
		{% for bet in bets %}
				{% set i = i + 1 %}

				{% if i % 2 %}
				    <div class="card left">
				{% else %}
				    <div class="card right">
				{% endif %}
		    	
					<img class="expertPic" src="{{ asset('bundles/ccplaysure/images/expert'~ bet.expertBet.expertId ~'.png', absolute=true) }}" alt="">
		    		<h2>{{ bet.expertName }}</h2>
		    		
		    		<h2>{{ bet.expertBet.PronosticTeamA }} - {{ bet.expertBet.PronosticTeamB }}</h2>
		    		
					<a href="{{path('gameView', {'gameId': bet.gameId})}}  " class="bet">Voir la fiche du match</a>
		    		<p class="price">{{ bet.expertBet.priceOfAction }} â‚¬</p>
		    		<div class="actions">
		    			<p><span class="numberOfActionsSold{{ i }}">{{ bet.expertBet.numberOfActionsSold }}</span> parieurs sur <span class="numberOfActionsTotal{{ i }}" >{{ bet.expertBet.numberOfActionsTotal }}</span></p>
		    			<div id="bar{{ i }}"></div>

		    		</div>
		    		<div class="clear"></div>
		    	</div>
		    	{% if i % 2 %}
		    	    <div class="whiteCircle left">
		    	    <img class="trait" src="{{ asset('bundles/ccplaysure/images/trait.png', absolute=true) }}" alt="">
		    	{% else %}
		    	    <div class="whiteCircle right">
		    	    <img class="trait" src="{{ asset('bundles/ccplaysure/images/trait.png', absolute=true) }}" alt="">
		    	{% endif %}
		    		<img src="{{ asset('bundles/ccplaysure/images/circle.png', absolute=true) }}" alt="cercle">
		    	</div>
		{% endfor %}
	{% endif %}
</div>
{% endblock %}